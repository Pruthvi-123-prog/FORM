{
  "version": 2,
  "name": "form-builder-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "buildCommand": "npm install --legacy-peer-deps && npm run build",
  "env": {
    "REACT_APP_API_BASE_URL": "https://form-builder-backend-scw7.onrender.com"
  }
}
